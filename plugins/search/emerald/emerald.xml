	<version>10.1</version>
	<description>Search Plugin for Emerald</description>
	<files>
		<filename plugin="emerald">emerald.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/libraries/mint/forms/fields/">
